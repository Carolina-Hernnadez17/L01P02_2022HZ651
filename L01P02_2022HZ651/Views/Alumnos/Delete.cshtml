@model L01P02_2022HZ651.Models.alumnos

@{
    ViewData["Title"] = "Eliminar Alumno";
}

<h1 class="text-center text-danger">Eliminar Alumno</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 border-danger">
            <h4 class="text-center mb-4">¿Estás seguro de que deseas eliminar este alumno?</h4>
            <dl class="row">
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.codigo)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.codigo)</dd>
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.nombre)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.nombre)</dd>
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.apellidos)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.apellidos)</dd>
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.dui)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.dui)</dd>
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.estado)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.estado)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="id" />
                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
