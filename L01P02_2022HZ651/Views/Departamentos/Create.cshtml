@model L01P02_2022HZ651.Models.departamentos

@{
    ViewData["Title"] = "Crear Departamento";
}

<h1 class="text-center text-success">Crear Nuevo Departamento</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 border-success">
            <h4 class="text-center mb-4">Formulario de Creación de Departamento</h4>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="departamento" class="form-label fw-bold"></label>
                    <input asp-for="departamento" class="form-control" placeholder="Ingrese el nombre del departamento" />
                    <span asp-validation-for="departamento" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-success">Crear</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
