@model L01P02_2022HZ651.Models.departamentos

@{
    ViewData["Title"] = "Eliminar Departamento";
}

<h1 class="text-center text-danger">Eliminar Departamento</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 border-danger">
            <h4 class="text-center mb-4">¿Está seguro de que desea eliminar este departamento?</h4>
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Departamento</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.departamento)</dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la lista</a>
</div>
