@model L01P02_2022HZ651.Models.departamentos

@{
    ViewData["Title"] = "Detalles del Departamento";
}

<h1 class="text-center text-primary">Detalles del Departamento</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 border-primary">
            <h4 class="text-center mb-4">Información del Departamento</h4>
            <dl class="row">
                <dt class="col-sm-4 fw-bold">Departamento</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.departamento)</dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning btn-sm">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
</div>
