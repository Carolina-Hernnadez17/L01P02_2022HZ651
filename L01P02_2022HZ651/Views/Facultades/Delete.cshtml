@model L01P02_2022HZ651.Models.facultades

@{
    ViewData["Title"] = "Eliminar Facultad";
}

<h1 class="text-center text-danger">Eliminar Facultad</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 border-danger">
            <h4 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta facultad?</h4>

            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.facultad)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.facultad)
                </dd>
            </dl>

            <div class="d-flex justify-content-between mt-3">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>
