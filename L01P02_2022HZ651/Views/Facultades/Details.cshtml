@model L01P02_2022HZ651.Models.facultades

@{
    ViewData["Title"] = "Detalles de Facultad";
}

<h1 class="text-center text-primary">Detalles de la Facultad</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4 border-primary">
            <h4 class="text-center mb-4">Información de la Facultad</h4>

            <dl class="row">
                <dt class="col-sm-4 fw-bold">
                    @Html.DisplayNameFor(model => model.facultad)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.facultad)
                </dd>
            </dl>

            <div class="d-flex justify-content-between mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>
