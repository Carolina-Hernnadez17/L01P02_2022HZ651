@model L01P02_2022HZ651.Models.materias

@{
    ViewData["Title"] = "Crear Materia";
}

<h1 class="text-center">Crear Materia</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <h4 class="text-center mb-4">Completa los detalles de la materia</h4>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="materia" class="control-label">Nombre de la Materia</label>
                    <input asp-for="materia" class="form-control" placeholder="Ej. Matemáticas" />
                    <span asp-validation-for="materia" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="unidades_valorativas" class="control-label">Unidades Valorativas</label>
                    <input asp-for="unidades_valorativas" class="form-control" placeholder="Ej. 3" />
                    <span asp-validation-for="unidades_valorativas" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="estado" class="control-label">Estado</label>
                    <input asp-for="estado" class="form-control" placeholder="Ej. Activa" />
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
