@model L01P02_2022HZ651.Models.materias

@{
    ViewData["Title"] = "Eliminar Materia";
}

<h1 class="text-center">Eliminar Materia</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm p-4">
            <h4 class="text-center mb-4">¿Estás seguro de que deseas eliminar esta materia?</h4>

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.materia)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.materia)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.unidades_valorativas)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.unidades_valorativas)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.estado)
                </dd>
            </dl>

            <div class="text-center mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
