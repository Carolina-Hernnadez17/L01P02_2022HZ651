@model L01P02_2022HZ651.Models.materias

@{
    ViewData["Title"] = "Editar Materia";
}

<h1 class="text-center">Editar Materia</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm p-4">
            <h4 class="text-center mb-4">Información de la Materia</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />

                <div class="form-group mb-3">
                    <label asp-for="materia" class="control-label">Nombre de la Materia</label>
                    <input asp-for="materia" class="form-control" placeholder="Ingrese el nombre de la materia" />
                    <span asp-validation-for="materia" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="unidades_valorativas" class="control-label">Unidades Valorativas</label>
                    <input asp-for="unidades_valorativas" class="form-control" placeholder="Ingrese las unidades valorativas" />
                    <span asp-validation-for="unidades_valorativas" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="estado" class="control-label">Estado</label>
                    <input asp-for="estado" class="form-control" placeholder="Ej. Activa" />
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
